<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8" />
<title>Blog</title>
<link rel="stylesheet" href="/stylesheets/style.css">
<script charset="utf-8" src="/KindEditor/kindeditor-all-min.js"></script>
<script charset="utf-8" src="/KindEditor/lang/zh_TW.js"></script>
<script>
var editor;
KindEditor.ready(function(K){
	editor = K.create('textarea', {
		allowImageUpload : false,
		items : [
			'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline', 'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderlist', 'insertunorderedlist', '|', 'emoticons', 'image', 'link']
	});
});
</script>
</head>
<body>

<header>
<h1><%= title %></h1>
</header>

<nav>
<span><a title="Home" href="/">home</a></span>
<span><a title="Save Archive" href="/archive">Archive</a></span>
<span><a title="Tag" href="/tags">tags</a></span>
<span><a title="Friendly links" href="/links">links</a></span>
<% if (user) { %>
	<span><a title="Upload" href="/upload">upload</a></span>
	<span><a title="Post" href="/post">post</a></span>
	<span><a title="Logout" href="/logout">logout</a></span>
<% } else { %>
	<span><a title="Login" href="/login">login</a></span>
	<span><a title="Register" href="/reg">register</a></span>
<% } %>
<span><form action="/search" method="GET"><input type="text" name="keyword" placeholder="SEARCH" class="search" /></form></span>
</nav>


<article>
<% if (success) { %>
	<div><%= success %></div>
<% } %>
<% if (error) { %>
	<div><%= error %></div>
<% } %>